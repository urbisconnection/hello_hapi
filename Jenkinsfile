#!/usr/bin/env groovy

pipeline {

    agent {
        docker { 
            any
            image 'ubuntu'
            label 'docker'
            args '-u root'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'npm test'
            }
        }
    }
}
